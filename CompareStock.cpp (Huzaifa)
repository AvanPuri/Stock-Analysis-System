#include "CompareStock.h"
#include <iostream>

using namespace std;

CompareStock::CompareStock(const string& filename) {
    GetStockData data;
    data.SetFile(filename);
    data.OpenFile();
    data.ParseData();
    stockData.push_back(data);
}

void CompareStock::compare() const {
    for (size_t i = 0; i + 1 < stockData.size(); ++i) {
        const GetStockData& stock1 = stockData[i];
        const GetStockData& stock2 = stockData[i + 1];

       
cout << "Date: " << stock1.GetDate(0) << " vs " << stock2.GetDate(0) << endl;
cout << "Open: " << stock1.GetOpen(0) << " vs " << stock2.GetOpen(0) << endl;
cout << "High: " << stock1.GetHigh(0) << " vs " << stock2.GetHigh(0) << endl;
cout << "Low: " << stock1.GetLow(0) << " vs " << stock2.GetLow(0) << endl;
cout << "Close: " << stock1.GetClose(0) << " vs " << stock2.GetClose(0) << endl;
cout << "Adjusted Close: " << stock1.GetAdjClose(0) << " vs " << stock2.GetAdjClose(0) << endl;
cout << "Volume: " << stock1.GetVolume(0) << " vs " << stock2.GetVolume(0) << endl;

    }
}
